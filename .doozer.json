{
  "submodules": ["simulation/libsimulator", "deps/try_signal"],
  "targets": {
    "x86_64": {
      "buildenv": "bionic-amd64",
      "builddeps": ["build-essential", "libssl-dev", "wget", "clang-5.0"],
      "buildcmd": [
        "clang++-5.0 --version",
        "wget -O - https://dl.bintray.com/boostorg/release/1.68.0/source/boost_1_68_0.tar.gz | tar xz",
        "(cd boost_1_68_0 && ./bootstrap.sh)",
        "",
        "echo \"using clang : : clang++-5.0 ;\" > ~/user-config.jam",
        "cd simulation",
        "BOOST_ROOT=${PWD}/../boost_1_68_0 ../boost_1_68_0/bjam --hash -j${PARALLEL}"
      ]
    },
    "macOS": {
      "buildenv": "osx",
      "buildcmd": [
        "curl -LsS https://dl.bintray.com/boostorg/release/1.68.0/source/boost_1_68_0.tar.gz | tar xz",
        "(cd boost_1_68_0 && ./bootstrap.sh)",
        "echo \"using darwin : : clang++ : <compileflags>-mmacos-version-min=10.14 ;\" > ~/user-config.jam",
        "cd simulation",
        "BOOST_ROOT=${PWD}/../boost_1_68_0 ../boost_1_68_0/bjam --hash -j${PARALLEL}"
      ]
    }
  }
}

